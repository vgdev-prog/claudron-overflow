{% extends 'base.html.twig' %}

{% block title %}App | Popular Answers{% endblock %}

{% block body %}
    <div class="container my-md-4">
        <div class="d-flex justify-content-between">
            <h1>Most Popular Answers</h1>

            <form action="{{ path('app_answers_popular') }}">
                <input type="search"
                       name="q"
                       class="form-control"
                       placeholder="Search..."
                       aria-label="Search"
                >
            </form>
        </div>

        <ul class="list-unstyled">
            {% include 'answer/_answer.html.twig' with { answers: answers } %}
        </ul>
    </div>

{% endblock %}
