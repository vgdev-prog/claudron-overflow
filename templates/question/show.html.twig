{% extends 'base.html.twig' %}


{% block title %} Cloudfare | {{ question.name|capitalize }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="my-4">Question</h2>
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="q-container-show p-4">
                        <div class="row">
                            <div class="col-2 text-center">
                                <img src="{{ asset('images/tisha.png') }}" width="100" height="100"  alt="Tisha avatar">
                                <div class="mt-3">
                                    <small>
                                        {% if question.askedAt %}
                                            Asked <br>
                                            {{ question.askedAt|ago }}
                                            {% else %}
                                            (Unpublished)
                                        {% endif %}
                                    </small>
                                </div>
                                <form action="{{ path('app_question_vote', {slug: question.slug}) }}" method="POST">
                                    <div class="vote-arrows flex-fill pt-2 js-vote-arrows" style="min-width: 90px;">
                                        <a class="vote-up" href="#" data-direction="up"><i class="far fa-arrow-alt-circle-up"></i></a>
                                        <a class="vote-down" href="#" data-direction="down"><i class="far fa-arrow-alt-circle-down"></i></a>
                                        <span class="js-vote-total">{{ question.votesString }}</span>
                                    </div>
                                </form>
                            </div>
                            <div class="col">
                                <h1 class="q-title-show">{{ question.name }}</h1>
                                <div class="q-display p-3">
                                    <i class="fa fa-quote-left me-3"></i>
                                    <p class="d-inline">{{ question.question|markdown_to_html }}</p>
                                    <p class="pt-4"><strong>--Tisha</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between my-4">
            <h2 class="">Answers <span style="font-size:1.2rem;">({{ question.answers|length }})</span></h2>
            <button class="btn btn-sm btn-secondary">Submit an Answer</button>
        </div>



        <ul class="list-unstyled">
            {% include 'answer/_answer.html.twig' with { answers: question.approvedAnswers } %}
        </ul>
    </div>
{% endblock %}
